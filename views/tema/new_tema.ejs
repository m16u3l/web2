  <section id="contact" class="fill">
    <div class="container wow fadeInUp">
      <div class="row">
        <div class="col-md-12">
          <h3 class="section-title">Registro de tema</h3>
          <div class="section-title-divider"></div>
          <p class="section-description">Ingrese los datos del Tema</p>
        </div>
      </div>
      
      <div class="row">
        
        <div class="col-md-8 col-md-push-2">
          <div class="form">
            <div id="sendmessage">Su registro fue enviado</div>
            <div id="errormessage"></div>
            <form action="/tema/registrar_tema" method="post" role="form" class="contactForm">

                <div class="form-group">
                  <label>Nombre Tema:</label>
                  <input type="text" name="nombre_tema" class="form-control" id="name" placeholder="Ingrese nombre del tema" data-rule="minlen:5" data-msg="Ingrese el nombre completo del tema" title="Nombre" required/>
                  <div class="validation"></div>
                </div>
                
                <div class="form-group">
                  <label>Area:</label>

                  <select class="form-control" name="area_tema">
                       <%_.each(areas,function(area){%>
                      <option value="<%=area.id_area%>"><%= area.nombre_area%></option>
                      <%})%>
                 </select>
                  <div class="validation"></div>
                </div>
                
                <div class="text-center">
                  <input type="submit" name="Registrar Evaludor" value="Registrar tema" class="btn btn-default"/>
                </div>
            </form>
          </div>
        </div>
        
      </div>
    </div>
  </section>
