<!--==========================
  Contact Section
============================--> 
  <section id="contact" class="fill">
    <div class="container wow fadeInUp">
      <div class="row">
        <div class="col-md-12">
          <h3 class="section-title">Registro de preguntas</h3>
          <div class="section-title-divider"></div>
          <p class="section-description">Ingrese la pregunta con su respuesta</p>
        </div>
      </div>
      
      <div class="row">
        
        <div class="col-md-8 col-md-push-3">
          <div class="form">
            <div id="sendmessage">Su registro fue enviado</div>
            <div id="errormessage"></div>
            <form action="/pregunta/registrar_pregunta" method="post" role="form" class="contactForm">

                <div class="form-group">
                  <label>Pregunta: </label>
                  <input type="text" name="pregunta" class="form-control" id="name" placeholder="Ingrese la pregunta" data-rule="minlen:4" data-msg="Ingrese el ID del pregunta" title="Nombre" required/>
                  <div class="validation"></div>
                

                
                  <label>Respuesta:</label>
                  <input type="text" name="respuesta" class="form-control" id="name" placeholder="Ingrese la respuesta correcta (solo esta sera valida)" data-rule="minlen:5" data-msg="Ingrese el nombre completo del pregunta" title="Respuesta" required/>
                  <div class="validation"></div>
                                
                  <label>Complejidad:</label>
                  <select class="form-control" type="text" name="complejidad" id="complejidad" required/>
                      <option>
                          1
                      </option>
                      <option>
                          2
                      </option>
                      <option>
                          3
                      </option>
                      <option>
                          4
                      </option>
                  <div class="validation"></div>        
                
                  <label>Tema:</label>

                  <select class="form-control" name="tema_pregunta">
                       <%_.each(temas,function(tema){%>
                      <option value="<%=tema.id_tema%>"><%= tema.nombre_tema%></option>
                      <%})%>
                 </select>
                  <div class="validation"></div>
                    <label> WTV</label>
                
                <div class="text-center">
                  <input type="submit" name="Registrar Evaludor" value="Registrar pregunta" class="btn btn-default"/>
                </div>
            </form>
          </div>
        </div>
        
      </div>
    </div>
  </section>
